@model PhoneBookApp.Core.Entities.Person

@{
    ViewData["Title"] = "Delete Person";
}

<h2>Delete Person</h2>

<h4>Are you sure you want to delete this person?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Full Name</dt>
    <dd class="col-sm-9">@Model.FullName</dd>

    <dt class="col-sm-3">Department</dt>
    <dd class="col-sm-9">@Model.Department</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Location</dt>
    <dd class="col-sm-9">@Model.Location?.Name</dd>

    <dt class="col-sm-3">Phone Numbers</dt>
    <dd class="col-sm-9">
        @if (Model.PhoneNumbers != null && Model.PhoneNumbers.Any())
        {
            <ul class="list-unstyled">
                @foreach (var phone in Model.PhoneNumbers)
                {
                    <li>📞 @phone.Number</li>
                }
            </ul>
        }
        else
        {
            <span class="text-muted">No phone numbers available.</span>
        }
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
