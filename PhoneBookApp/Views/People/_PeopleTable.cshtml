@model IEnumerable<PhoneBookApp.Core.Entities.Person>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Department</th>
            <th>Email</th>
            <th>Location</th>
            <th>Phone Numbers</th>
            @if (ViewBag.IsAdmin)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var person in Model)
            {
                <tr>
                    <td>@person.FullName</td>
                    <td>@person.Department</td>
                    <td>@person.Email</td>
                    <td>@person.Location?.Name</td>
                    <td>
                        @if (person.PhoneNumbers != null && person.PhoneNumbers.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var phone in person.PhoneNumbers)
                                {
                                    <li>@phone.Number</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No Numbers</span>
                        }
                    </td>
                    @if (ViewBag.IsAdmin)
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@person.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@person.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    }
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="@(ViewBag.IsAdmin ? 6 : 5)" class="text-center text-muted py-3 fs-5">
                    😕 No results found
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @{
            int total = (int)(ViewBag.TotalPages ?? 1);
            int current = (int)(ViewBag.PageNumber ?? 1);
            for (int i = 1; i <= total; i++)
            {
                var active = (i == current) ? "active" : "";
                <li class="page-item @active">
                    <a href="#" data-page="@i" class="page-link">@i</a>
                </li>
            }
        }
    </ul>
</nav>
